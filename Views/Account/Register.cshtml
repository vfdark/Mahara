@using Microsoft.AspNetCore.Identity
@using Mahara.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "تسجيل حساب جديد";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        * { margin:0; padding:0; box-sizing:border-box; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        body { background:#fef6ff; color:#333; line-height:1.6; }
        a { text-decoration:none; color:inherit; }

        /* Navbar */
        nav { position: fixed; top:0; left:0; width:100%; background:rgba(255,255,255,0.9); backdrop-filter:blur(8px); padding:1rem 0; box-shadow:0 2px 8px rgba(0,0,0,0.05); z-index:1000; }
        nav .container { display:flex; justify-content:space-between; align-items:center; max-width:1200px; margin:auto; padding:0 1rem; }
        nav .logo { font-weight:bold; font-size:1.5rem; background:linear-gradient(90deg,#a4508b,#5f0a87); -webkit-background-clip:text; color:transparent; }
        nav .nav-links { display:flex; gap:1rem; }
        nav .nav-links a { color:#555; font-weight:500; transition:0.3s; }
        nav .nav-links a:hover { color:#a4508b; }

        /* Form container */
        .form-container { max-width:400px; margin:120px auto 0; background:#fff; padding:2rem; border-radius:20px; box-shadow:0 10px 25px rgba(0,0,0,0.05); }
        h1 { text-align:center; font-size:2rem; margin-bottom:1rem; background:linear-gradient(90deg,#a4508b,#5f0a87); -webkit-background-clip:text; color:transparent; }
        form div { margin-bottom:1rem; }
        label { display:block; margin-bottom:0.3rem; font-weight:bold; }
        input { width:100%; padding:0.75rem 1rem; border:1px solid #ddd; border-radius:12px; font-size:1rem; }
        .btn-primary { width:100%; background:linear-gradient(90deg, #a4508b, #5f0a87); color:white; padding:0.75rem; border-radius:12px; border:none; cursor:pointer; font-weight:bold; font-size:1rem; transition:0.3s; }
        .btn-primary:hover { opacity:0.9; }
        .text-danger { color:#ec4899; font-size:0.9rem; }
        .login-link { text-align:center; margin-top:1rem; }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav>
        <div class="container">
            <div class="logo">مهارة</div>
            <div class="nav-links">
                <a href="@Url.Action("Index", "Home")">الرئيسية</a>
                @if (SignInManager.IsSignedIn(User))
                {
                    <a href="#">مرحبا @User.Identity?.Name</a>
                    <a href="@Url.Action("Logout", "Account")">تسجيل الخروج</a>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")">تسجيل الدخول</a>
                    <a href="@Url.Action("Register", "Account")">إنشاء حساب</a>
                }
            </div>
        </div>
    </nav>

    <!-- Register Form -->
    <div class="form-container">
        <h1>تسجيل حساب جديد</h1>
        <form asp-action="Register" method="post">
            <div>
                <label>الاسم الكامل</label>
                <input type="text" name="fullName" required />
            </div>
            <div>
                <label>البريد الإلكتروني</label>
                <input type="email" name="email" required />
            </div>
            <div>
                <label>كلمة المرور</label>
                <input type="password" name="password" required />
            </div>
            <div>
                <label>تأكيد كلمة المرور</label>
                <input type="password" name="confirmPassword" required />
            </div>

            @if (ViewBag.Errors != null)
            {
                <div class="text-danger">
                    @foreach (var error in ViewBag.Errors)
                    {
                        <div>@error.Description</div>
                    }
                </div>
            }

            <button type="submit" class="btn-primary">إنشاء حساب</button>
        </form>

        <div class="login-link">
            <p>هل لديك حساب؟ <a href="@Url.Action("Login","Account")">تسجيل الدخول</a></p>
        </div>
    </div>

</body>
</html>
