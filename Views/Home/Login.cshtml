@{
    ViewData["Title"] = "تسجيل الدخول";
}

<style>
/* Navbar (same as index) */
nav {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 2rem;
    background: rgba(255,255,255,0.8);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid #ddd;
    z-index: 1000;
}

nav .logo {
    font-size: 1.8rem;
    font-weight: bold;
    background: linear-gradient(90deg,#a4508b,#5f0a87);
    -webkit-background-clip: text;
    color: transparent;
}

/* Login Page */
.login-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    background: linear-gradient(135deg,#f3e8ff,#e0c3fc);
    padding: 2rem 1rem;
    margin-top: 70px; /* space for navbar */
}

.login-page h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(90deg,#a4508b,#5f0a87);
    -webkit-background-clip: text;
    color: transparent;
}

.login-page form {
    background: #fff;
    padding: 3rem 2rem;
    border-radius: 20px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    max-width: 400px;
    width: 100%;
}

.login-page .form-group {
    margin-bottom: 1.5rem;
    text-align: left;
}

.login-page label {
    display: block;
    font-weight: bold;
    margin-bottom: 0.5rem;
}

.login-page input {
    width: 100%;
    padding: 0.75rem 1rem;
    border-radius: 10px;
    border: 1px solid #ddd;
    font-size: 1rem;
}

.login-page button.btn-primary {
    width: 100%;
    padding: 0.75rem;
    border-radius: 10px;
    border: none;
    background: linear-gradient(90deg,#a4508b,#5f0a87);
    color: #fff;
    font-size: 1rem;
    cursor: pointer;
    transition: 0.3s;
}

.login-page button.btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.login-page p {
    margin-top: 1rem;
}

.login-page a.btn-primary {
    display: inline-block;
    margin-top: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 10px;
    text-decoration: none;
    color: #fff;
    background: linear-gradient(90deg,#a4508b,#5f0a87);
}
</style>

<!-- Navbar -->
<nav>
    <div class="logo">مهارة</div>
</nav>

<!-- Login Form -->
<div class="login-page">
    <h1>تسجيل الدخول</h1>

    @if (ViewBag.Error != null)
    {
        <p style="color:red;">@ViewBag.Error</p>
    }

    <form method="post" action="@Url.Action("Login","Home")">
        <div class="form-group">
            <label>البريد الإلكتروني</label>
            <input type="email" name="Email" placeholder="example@test.com" required />
        </div>

        <div class="form-group">
            <label>كلمة المرور</label>
            <input type="password" name="Password" placeholder="••••••" required />
        </div>

        <button type="submit" class="btn-primary">تسجيل الدخول</button>
        <div asp-validation-summary="All" class="text-danger"></div>

    </form>

    <p>
        ليس لديك حساب؟ 
        <a href="@Url.Action("Index","Home")" class="btn-primary">أنشئ حسابك مجاناً</a>
    </p>
</div>
