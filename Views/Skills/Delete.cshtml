@model Mahara.Models.Skill

@{
    ViewData["Title"] = "حذف المهارة";
}

<h1 class="page-title">تأكيد حذف المهارة</h1>

<p>هل تريد حذف المهارة: <strong>@Model.Name</strong>؟</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-delete">حذف</button>
    <a href="@Url.Action("Index", "Skills")" class="btn">إلغاء</a>
</form>
